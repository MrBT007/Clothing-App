<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    android:layout_marginBottom="-35dp"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:fontFamily="@font/heebo_bold"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textColor="@color/custom_brown"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_sure_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_logout"
            android:fontFamily="@font/heebo_regular"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:textColor="@color/custom_brown"
            android:layout_centerHorizontal="true"
            android:text="Are you sure you want to log out?"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:layout_below="@id/tv_sure_logout"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_logout_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:fontFamily="@font/heebo_regular"
                android:backgroundTint="@color/white"
                android:textColor="@color/custom_brown"
                app:strokeColor="@color/custom_brown"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_logout_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Yes, Logout"
                android:fontFamily="@font/heebo_regular"
                android:backgroundTint="@color/custom_brown"
                android:textColor="@color/white" />

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>